
	
	
<% if signed_in? %>
	
  <div class="row">
    <aside class="span4">
      <section>
        <%= render 'shared/user_info' %>
      </section>
	  <section>
        <%= render 'shared/stats' %>
      </section>
	  <section>
        <%= link_to "Search for a ride", new_search_path %>
      </section>
    </aside>
	
	<div class="span8">
      <h3>Ride Feed</h3>
      <%= render 'shared/feed' %>
    </div>
	<div class="span4">
      <h3>Post a new ride</h3>
      <%= render 'shared/micropost_form' %>
    </div>
	
  </div>
	
<% else %>
	<div class="center hero-unit">
		<h1>Welcome to Move UTC</h1>
		<h2>You're this close to finding a ride !</h2>
		<%= link_to "Sign up now!", signup_path, class: "btn btn-large btn-primary" %>
	</div>
	<% end %>
	
	