<li id="<%= feed_item.id %>">
    <%= link_to feed_item.user.name, feed_item.user %>
  </span>
  <span class="content"><%= feed_item.content %></span>
  <span class="content">RIDES ON : <%= feed_item.date %></span>
  <span class="content">Leaving from : <%= feed_item.start_town %> - <%= feed_item.start_location %></span>
  <span class="content">Dropping at : <%= feed_item.drop_town %> - <%= feed_item.drop_location %></span>
  <span class="content">Available seats : <%= feed_item.nb_passengers %> seats</span>
  <span class="timestamp">
    Posted <%= time_ago_in_words(feed_item.created_at) %> ago.
  </span>


  <%if current_user.hopped_in?(feed_item) %>
      <%= form_for(current_user.rides.find_by_ride_id(feed_item.id),
             html: { method: :delete }) do |f| %>
      <%= f.submit "Jump off", :class => "btn btn-large" %>
      <% end %>
 
 <% else %>
    <%= form_for(current_user.rides.build(ride_id: feed_item.id)) do |f| %>
     <div><%= f.hidden_field :ride_id %></div>
        <%= f.submit "Hop in", :class => "btn btn-large btn-primary" %>     
  <% end %>
    
 
 <% end %>
  </div>

</li>