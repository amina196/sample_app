<!DOCTYPE html>
<html>

  <head>
    <title><%= title %></title>
    <%= csrf_meta_tag %>
	<%= stylesheet_link_tag "application", media: "all"%>
  </head>

  <body>
    <div class="container">

      <%= render 'layouts/header' %>

      <section class="round">
        <% flash.each do |key, value| %>
          <div class="flash <%= key %>"><%= value %></div>
        <% end %>

        <%= yield %>

      </section>

	  <%= render 'layouts/footer' %>

	  <%= debug(params) if Rails.env.development? %>


	</div>
  </body>
</html>
